# ~/.zpreztorc

# Order matters
zstyle ':prezto:load' pmodule \
  'environment' \
  'terminal' \
  'editor' \
  'history' \
  'directory' \
  'spectrum' \
  'utility' \
  'completion' \
  'git' \
  'syntax-highlighting' \
  'history-substring-search' \
  'prompt' \
  "autosuggestions" \
  "pacman" 


# Prompt theme (try: sorin, paradox, pure not included by default)
zstyle ':prezto:module:prompt' theme 'steeef'

# Git module options (examples)
zstyle ':prezto:module:git:status:ignore' submodules 'all'
zstyle ':prezto:module:git' skip-ignored 'yes'

# Completion tweaks
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Za-z}' 'l:|=* r:|=*'
zstyle ':completion:*' menu select

